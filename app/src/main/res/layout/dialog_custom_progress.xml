<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dcp_llMain_padding">

    <ProgressBar
        android:layout_width="@dimen/dcp_progressBar_size"
        android:layout_height="@dimen/dcp_progressBar_size"
        android:layout_marginEnd="@dimen/dcp_progressBar_marginEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dcp_tvPleaseWait_text"
        android:textStyle="bold"
        android:textSize="@dimen/dcp_tvPleaseWait_textSize"
        />
</LinearLayout>